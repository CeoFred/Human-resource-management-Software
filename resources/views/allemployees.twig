{% extends 'admindashboard.twig' %}

{% block content %}
<div class="card">
<div class="card-header">All Employees({{ auth.Allusers }})

</div>

<div class="table-responsive text-nowrap">
<table class="table">
    <tr>
        <th></th>
        <th style="font-size:20px"><b>Full Name</b></th>
        
        
        <th style="font-size:20px"><b>Department</b></th>
    </tr>
        {% for user in auth.adminusers  %}

        <tr>
            <td> {% if user.image == '' %}
      <img src="https://ugarsoft.com/wp-content/themes/ugarsoft/imgs/logo.png" height="60" width="60" style="border-radius:50%">
    {% else %}
<img src="{{user.image}}" height="60" width="60" style="border-radius:50%">
{% endif %}

</td>

      <td><a style="font-size:20px" href="{{path_for('view.employee')}}?id={{user.company_id}}">{{ user.givenname }} {{ user.familyname }}</a></td>
<td style="font-size:20px">{{ user.department }}</td>
        {% else %}
<td>Empty</td>
    </tr>

    {% endfor %}
</table>
</div>

</div>
{% endblock %}

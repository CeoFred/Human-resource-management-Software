{% extends "app.twig" %}

{%  block content %}

<div class="row">
<div class="col-md-6 col-md-offset-3">
    <div class="card">
        <h5 class="card-header">SignUp Now</h5>
        <div class="card-body">

            <form enctype="multipart/form-data" action="{{ path_for('auth.signup') }}" method="POST">
<div class="form-group ">
<label for="email">Email</label>
<input type="email" name="email" class="{{errors.email ? 'has-error ': '' }}
 form-control"  id="email" placeholder="you@domain.com" value={{ old.email }} >

{%  if errors.email %}
<span class="help-block has-error-p">{{ errors.email | first}}</span>
{% endif %}
</div>

<div class="form-group">
    <label for="name">First Name</label>
    <input type="text" name="firstname" class="{{errors.firstname ? 'has-error ': '' }} form-control" id="name"
    placeholder="Name" value={{ old.firstname }} >
{% if errors.firstname %}
<span class="help-block has-error-p">{{ errors.firstname | first}}</span>
{% endif %}
</div>

<div class="form-group">
    <label for="name">Last Name</label>
    <input type="texfirst" name="lastname" class="{{errors.lastname ? 'has-error ': '' }} form-control" id="name"
    placeholder="Name" value={{ old.lastname }} >
{% if errors.lastname %}
<span class="help-block has-error-p">{{ errors.lastname | first}}</span>
{% endif %}
</div>
<!-- deparment -->
<div class="form-group">
    <label for="name">Department</label>
<select name="department" class="{{errors.department ? 'has-error ': '' }} form-control">
    <option selected>
    --DEPARTMENT--
</option>
<option value="it">Software</option>
<option value="delivery">Delivery</option>
</select>
    {% if errors.department %}
<span class="help-block has-error-p">{{ errors.department | first}}</span>
{% endif %}
</div>
<!-- gender -->
<div class="form-group">
    <label for="name">Gender</label>
    <select name="gender" class="{{errors.gender ? 'has-error ': '' }} form-control">
        <option selected>
            --GENDER--
        </option>
        <option value="male">Male</option>
        <option value="female">Female</option>
    </select>
    {% if errors.gender %}
    <span class="help-block has-error-p">{{ errors.gender | first}}</span>
    {% endif %}
</div>


<!-- password -->
<div class="form-group">
    <label for="pass">Password</label>
    <input type="password" name="password" class="{{errors.password ? 'has-error ': '' }} form-control" id="pass" placeholder="Password" value={{ old.password }} >
{% if errors.password %}
<span class="help-block has-error-p">{{ errors.password | first}}</span>
{% endif %}
</div>
<div class="custom-file">

    <input type="file" class="custom-file-input" id="inputGroupFile01" name="image" aria-describedby="inputGroupFileAddon01">
    <label class="custom-file-label" for="inputGroupFile01">Upload an Image</label>

</div><button type="submit" class="btn btn-success">Signup</button>

{{ csrf.field | raw  }}
</form>
           </div>
    </div>
</div>
</div>

{% endblock %}

{% extends "admindashboard.twig" %}

{% block content %}

<div class="card">
<div class="card-body">
<!-- row start -->
    <div class="row">

    {# start birthdays  #}
        <div class="col-md-4 animated slideInLeft">
<div class="card">
    <div class="card-header">
<h5>Birthday</h5>
    </div>
<div class="card-body menu-body">


{% if auth.countUpcomingBirthdays > 0 %}

{% for birthdayBuddies in auth.getUpcomingBirthdays %}
<div style="border-left:2px solid orange">
<p class="animated bounceIn infinty">
    {{birthdayBuddies.familyname}} {{birthdayBuddies.givenname}} is celebrating today!</p>
<a style="color:#000" href="{{path_for('sendBirthdayWishes')}}?id={{birthdayBuddies.company_id}}">Send your wishes.</a>
</div>
<br>
{% endfor %}

{% else %}

<div>
No birthday Buddies Today
<div align="center" style="padding:auto;margin-top:1px;">

    <img src="https://ugarsoft.com/wp-content/themes/ugarsoft/imgs/logo.png" height="50" width="120" style="border-radius:50%" alt="ogwugo">

</div>
    
</div>


{% endif %}

    <!-- No birthday Buddies Found -->

    </div>
</div>
      
        </div>
<!-- end birthdays -->
        <!-- new hires -->
<div class="col-md-4 animated slideInRight">
<div class="card">
    <div class="card-header">
        <h5>New Hires</h5>
    </div>
    <div class="card-body">
{% if auth.getNewHires %}
{% for newPeople in auth.getNewHires %}
<div class="card" style="margin-top:-19px;">
<div class="card-body" style="padding:25px;">
<a href="{{path_for('view.employee')}}?id={{newPeople.company_id}}" style="color:#000;font-size:15px">
<i class="far fa-user"></i> {{ newPeople.familyname }} {{newPeople.givenname}}
</a>
</div>
</div>
{% endfor %}

{% else %}
No New Joinees Found
<div align="center" style="padding:auto;margin-top:10px;">

    <img src="{{ base_url() }}/img/ogwugo.png" height="50" width="120" style="border-radius:50%" alt="ogwugo">

</div>
{% endif %}
    </div>
</div>

</div>
<!-- end new hires -->

{# department #}
<div class="col-md-4 animated slideInRight">
    <div class="card">
        <div class="card-header">
            <h5>Department Members</h5>
        </div>
        <div class="card-body menu-body">
{%for Department in auth.getDepartments %}
            <div>
<h5 style="float:left">{{Department.department}}</h5><span class="badge amber darken-2"
 style="float:right">{{Department.Members}}</span>
            </div>
            <br>
            <br>
            {% endfor %}
        </div>
    </div>



</div>
<!-- end department
 -->
</div>
<!-- row end -->

    </div>
</div>

{% endblock %}
